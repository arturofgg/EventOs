<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/azulClaro</item>
        <item name="colorPrimaryDark">@color/azulOscuro</item>
        <item name="colorAccent">@color/gris</item>
    </style>

    <!--Estilo que uso en la toolbar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Estilo para los colores del menu inferior-->
    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@drawable/colores_menu_inferior</item>
        <item name="itemTextColor">@drawable/colores_menu_inferior</item>
        <item name="itemBackground">@color/azulClaro</item>
    </style>

    <!--Estilo para las letras del menu inferior-->
    <style name="BottomNavigationTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:shadowColor">@color/material_dynamic_neutral10</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>
